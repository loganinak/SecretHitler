<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.secrethitler.ConfirmPlayerFragment"
    android:onClick="playerTurn"
    android:nestedScrollingEnabled="false">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are You "
        android:id="@+id/confirmPlayer_TextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes I am"
        android:id="@+id/confirmPlayer_Button"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/confirmPlayer_TextView"
        android:layout_centerHorizontal="true"
        android:onClick="playerTurn" />

</RelativeLayout>
